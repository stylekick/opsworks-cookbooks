<% (@worker_count || 1).times do |num| %>
check process resque_<%= num %>
  with pidfile <%= @deploy[:deploy_to] %>/shared/pids/resque<%= num %>.pid
  start program = "/usr/bin/sudo su deploy -c 'cd <%= @deploy[:deploy_to] %>/current; RAILS_ENV=production QUEUE=* TERM_CHILD=1 bundle exec rake resque:work -P <%= @deploy[:deploy_to] %>/shared/pids/resque<%= num %>.pid -L log/resque.log'" with timeout 90 seconds
  stop program = "/bin/bash -c '/bin/kill -TERM `cat <%= @deploy[:deploy_to] %>/shared/pids/resque<%= num %>.pid`'" with timeout 180 seconds
  group resque
<% end %>